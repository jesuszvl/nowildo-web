---
import TwitchEmbed from '../components/TwitchEmbed.jsx';
import Layout from '../layouts/Layout.astro';
const canal = "nowildo";
---

<Layout title="NoWildo" description="Transmisi칩n en vivo de juegos y m치s con NoWildo">
	<div class="hero-section">
		<h1>Hola! Soy NoWildo</h1>
		<p>Transmisi칩n en vivo de juegos y m치s</p>
	</div>
	<div class="stream-container">
		<TwitchEmbed client:visible channel={canal} width="100%" height={480} />
	</div>
</Layout>

<style>
	.hero-section {
		text-align: center;
		padding: 2rem 1rem;
		margin-bottom: 2rem;
	}

	.hero-section h1 {
		font-size: 2.5rem;
		margin-bottom: 0.5rem;
		color: white;
	}

	.hero-section p {
		font-size: 1.2rem;
		color: #efeff1;
		margin: 0;
	}

	.stream-container {
		padding: 16px;
		max-width: 1200px;
		margin: 0 auto;
		border: 2px solid #49927e;
		border-radius: 8px;
		background: #18181b;
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
		height: 100%;
		min-height: 480px;
	}

	@keyframes spin {
		0% { transform: rotate(0deg); }
		100% { transform: rotate(360deg); }
	}

	@media (max-width: 768px) {
		.hero-section h1 {
			font-size: 2rem;
		}

		.hero-section p {
			font-size: 1rem;
		}

		.stream-container {
			padding: 12px;
		}
	}
</style>
